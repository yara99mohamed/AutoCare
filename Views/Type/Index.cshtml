@model IEnumerable<AutoCare.Models.Type>

@{
    ViewData["Title"] = "Car List";
}

<h1>Car List</h1>

<hr />
<p>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Add Type</a>
</p>
@if (!Model.Any())
{
<div class="alert alert-warning" role="alert">
    <i class="bi bi-exclamation-triangle"></i>
    No Types Found!
</div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @if (item.IsActive == true)
                        {
                            <label>
                                IsActive
                            </label>
                        }
                        else
                        {
                            <label>
                                NotActive
                            </label>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedOn)
                    </td>
                    <td class="d-flex">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info" style="margin-right:8px"><i class="bi bi-pencil" ></i> Edit</a> 
                        <form method="post" asp-action="Delete" asp-route-id="@item.Id">
                            <button onclick="return confirm('Are you sure you want to delete Type! :@(item.Name)')" class="btn btn-outline-danger">
                                <i class="bi bi-trash"></i> Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
